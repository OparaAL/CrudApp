@model CrudApp.Models.Department;
@{
    ViewBag.Title = "Create department";
}

<form asp-action="Create" asp-controller="Department" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Name</label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Code" class="control-label">Code</label>
        <input type="text" asp-for="Code" class="form-control" />
        <span asp-validation-for="Code"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Send" class="btn btn-default" />
    </div>
</form>
